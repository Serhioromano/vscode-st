		["THEN", "ELSIF"],
		["OF", "END_CASE"],
		["DO", "END_FOR"],
		["FOR", "END_FOR"],
		["DO", "END_WHILE"],
		["WHILE", "DO"],
		["REPEAT", "END_REPEAT"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{"open": "{", "close": "}"},
		{"open": "[", "close": "]"},
		{"open": "(", "close": ")"},
		{"open": "\"", "close": "\"",  "notIn": ["string"]},
		{"open": "'", "close": "'",  "notIn": ["string", "comment"]},
		{"open": "(* ", "close": " *)",  "notIn": ["string"]},
		{"open": "/* ", "close": " */",  "notIn": ["string"]},
		{"open": "VAR_INPUT", "close": "END_VAR", "notIn": ["string"]},
