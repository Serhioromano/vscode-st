		["{", "}"],
		["[", "]"],
		["VAR", "END_VAR"],
		["VAR_INPUT", "END_VAR"],
		["VAR_OUTPUT", "END_VAR"],
		["VAR_IN_OUT", "END_VAR"],
		["VAR_TEMP", "END_VAR"],
