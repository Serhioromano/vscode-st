{
	"comments": {
		"lineComment": "//",
		"blockComment": [ "(*", "*)" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{"open": "{", "close": "}"},
		{"open": "[", "close": "]"},
		{"open": "(", "close": ")"},
		{"open": "\"", "close": "\"",  "notIn": ["string", "comment"]},
		{"open": "'", "close": "'",  "notIn": ["string", "comment"]},
		{"open": "(*", "close": "*",  "notIn": ["string"]},
		{"open": "/*", "close": "*/",  "notIn": ["string", "comment"]},
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["(*", "*)"],
		["\"", "\""],
        ["'", "'"],
    ],
	"folding": {
		"offSide": true,
        "markers": {
			"start": "^\\s*//#region",
            "end": "^\\s*//#endregion"
        }
	}
	
	,
	"indentationRules": {
		"increaseIndentPattern": "(\\(|\\[|\\(\\*|/\\*|(ELSE|THEN|ELSIF|DO|BY|OF|(?<!END_)REPEAT|(?<!END_)VAR).*)$",
		"decreaseIndentPattern": "^\\s*(\\)|\\]|\\*/|\\*\\)|\\b(ELSE|ELSIF|UNTIL|(END_(IF|FOR|WHILE|CASE|VAR)))\\b)"
	},

	//"enhancedBrackets":[
	// 	{ "openTrigger": "\\s", "open": "VAR", "closeComplete": "END_VAR", "matchCase": true },
	// 	{ openTrigger: 'e', open: /case$/i, closeComplete: 'end', matchCase: true },
	// 	{ openTrigger: 'n', open: /when$/i, closeComplete: 'then', matchCase: true }
	// ]
	// noindentBrackets: '()',
}