{
  "name": "st",
  "scopeName": "source.st",
  "fileTypes": [
    ".iecst",
    ".st",
    ".exp",
    ".scl"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.st",
      "match": "\\b(BOOL#0|BOOL#1|BYTE|DINT|DWORD|END_PROGRAM|FALSE|INT|LINT|LREAL|LWORD|PROGRAM|REAL|SINT|TRUE|UDINT|UINT|ULINT|USINT|WORD)\\b"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.st",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.st"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.st"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.st"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.st"
        }
      ]
    }
  }
}