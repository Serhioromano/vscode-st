{
  "name": "st",
  "scopeName": "source.st",
  "fileTypes": [
    ".iecst",
    ".st",
    ".exp",
    ".scl"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.st",
      "match": "\\b(BOOL|BYTE|DINT|DT|DWORD|END_FUNCTION|END_FUNCTION_BLOCK|END_PROGRAM|END_TYPE|FUNCTION|FUNCTION_BLOCK|INT|LINT|LREAL|PROGRAM|REAL|SINT|TIME|TOD|TYPE|UDINT|UINT|ULINT|USINT|WORD)\\b"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.st",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.st"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.st"
            }
          }
        },
        {
          "name": "comment.block.st",
          "begin": "\\(\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.st"
            }
          },
          "end": "\\*\\)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.st"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.st"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.st"
        }
      ]
    }
  }
}